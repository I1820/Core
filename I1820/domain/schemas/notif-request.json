{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "I1820 Notification Request",
  "type": "object",
  "properties": {
    "agent_id": {
      "description": "I1820 agent identification",
      "type": "string"
    },
    "device_id": {
      "description": "Target end device identification",
      "type": ["string", "array"]
    },
    "type": {
      "description": "Type of target end device",
      "type": "string"
    },
    "settings": {
      "description": "Requested settings that must be applied to target end device",
      "type": "object"
    }
  },
  "required": ["agent_id", "device_id", "type", "settings"]
}
